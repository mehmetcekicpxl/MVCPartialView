@model List<MVCPartialView.Models.Product>

<h2>Product List</h2>

<div class="row">
    <div class="col-8">
        @foreach (var product in Model)
        {
            @await Html.PartialAsync("_ProductCard", product)
        }
    </div>

    <div class="col-4">
        @await Component.InvokeAsync("CartSummary")
    </div>
</div>

